@using System.Web.UI.WebControls
@using Azimuth.Infrastructure.Concrete
@model Azimuth.DataAccess.Entities.User

@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row" style="margin-left: 10%; width: 80%; height: 90%;">
        <div id="relogin" class="alert alert-danger" style="display: none; margin-top: 10px; z-index: 1001;">
            <p id="error"> Your time has expired, please login again. </p>
            @Html.ActionLink("OK", "ConnectAccount", "Account", new { provider = "Vkontakte", returnUrl = @Url.Action("Index", "Settings") }, new { @class = "btn btn-danger btn-large" })
        </div>
        <div class="tabbable">
            <ul class="nav nav-tabs" style="width: 90%">
                <li class="active"><a href="#user-profile" data-toggle="tab">User Profile</a></li>
                <li><a href="#user-accounts" data-toggle="tab">Accounts</a></li>
            </ul>

            <div class="tab-content" style="margin-top: 10px">
                <div class="tab-pane fade" id="user-accounts">
                    <ul class="nav nav-pills">
                        @foreach (var sn in ViewBag.Data.ConnectedNetworks)
                        {
                            <li>
                                @if (AzimuthIdentity.Current.UserCredential.SocialNetworkName != sn.Name)
                                {
                                    <span>@sn.Name</span>
                                    @Html.ActionLink("Disconnect", "Disconnect", new { provider = sn.Name }, new { @class = "btn btn-danger btn-large" })
                                }
                            </li>
                        }
                        @foreach (var sn in ViewBag.Data.AvailableNetworks)
                        {
                            <li>
                                <span>@sn.Name</span>
                                @Html.ActionLink("Connect", "ConnectAccount", "Account", new { provider = sn.Name, returnUrl = @Url.Action("Index", "Settings") }, new { @class = "btn btn-success btn-large", @style = "margin-left: 5px" })
                            </li>
                        }
                    </ul>
                </div>
                <div class="tab-pane fade active in" id="user-profile">
                    @{ Html.RenderPartial("~/Views/UserProfile/_UserProfile.cshtml", Model); }  
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js"></script>
}