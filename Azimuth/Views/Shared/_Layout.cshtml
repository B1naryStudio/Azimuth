@using Azimuth.Infrastructure.Concrete
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("UserProfile", "Index", "UserProfile")</li>
                        <li>@Html.ActionLink("My music", "Index", "Music")</li>
                    
                        <li>@Html.ActionLink("Public Playlists", "Index", "PublicPlaylists")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a id="user-settings" href="@Url.Action("Index", "Settings")">
                                <img src="@AzimuthIdentity.Current.UserCredential.PhotoBig" />
                            </a>
                        </li>
                        <li id="user-name-item">
                            <div id="user-name">@User.Identity.GetUserName()</div>
                            @Html.ActionLink("Log off", "LogOff", "Account", null, new {id = "log-off-link"})
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
