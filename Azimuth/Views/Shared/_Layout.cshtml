@using Azimuth.Infrastructure.Concrete
@using Microsoft.AspNet.Identity

@{
    var loggedUser = AzimuthIdentity.Current.UserCredential;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header col-xs-12 col-sm-6 col-lg-8">
                <a class="col-xs-4" href="@Url.Action("Index", "PublicPlaylists")">
                    <img src="~/Images/logo.jpg" height="40" />
                </a>
                @if (Request.IsAuthenticated)
                {
                    <div class="col-xs-5 pull-right">
                        <form role="form" action="/search">
                            <div class="input-group navbar-btn">
                                <input type="text" placeholder="Search" class="form-control" style="min-width: 150px;" name="searchParam" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default">
                                        <div class="glyphicon glyphicon-search"></div>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                }
                <button type="button" class="navbar-toggle collapsed col-xs-1 pull-right" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            @if (Request.IsAuthenticated)
            {
                <div class="navbar-collapse collapse in col-xs-6 col-lg-4">
                    <ul class="nav navbar-nav">
                        <li id="user-settings" class="col-xs-10">
                            <a id="user-image" href="@Url.Action("Index", "Music")">
                                <img src="@AzimuthIdentity.Current.UserCredential.PhotoBig"/>
                            </a>
                            <a href="@Url.Action("Index", "Music")">@User.Identity.GetUserName() </a>
                        </li>
                        <li class="dropdown col-xs-2">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-sort-desc"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Account", "Index", "UserProfile")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Log off", "LogOff", "Account")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                </ul>
                
            }
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <div id="notification" class="alert alert-warning popup-notification" role="alert"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('#searchBtn').click(function() {
            window.location = window.location.protocol + "//" + window.location.host + '/search?searchParam=' + $('#searchText').val();
        });
        $('#searchText').keypress(function(e) {
            if (e.which == 13) {
                window.location = window.location.protocol + "//" + window.location.host + '/search?searchParam=' + $('#searchText').val();
                return false;
            }
        });
    </script>
    
    <script src="~/Scripts/jquery.signalR-2.1.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            // Declare a proxy to reference the hub.
            var notificationsHub = $.connection.notificationsHub;
            var id = @loggedUser.Id
            // Start Hub
            $.connection.hub.start().done(function() {
                notificationsHub.server.connect(id);
            });

            var timerId = null;

            notificationsHub.client.newNotification = function(notification) {
                console.log(notification);
                var $notif = $('#notificationTemplate');
                var object = $notif.tmpl(notification);
                clearTimeout(timerId);
                timerId = setTimeout(function() {
                    closeNotification($(object));
                }, 5000);

                addNotification(object);
            };

            function addNotification(notification) {
                var $container = $('#notification');
                if ($container.children().length == 0) {
                    $('#notification')
                        .append('<a href="#" class="close">&times;</a>');

                    $('#notification')
                        .find('.close')
                        .on('click', function () {
                            closeNotification($(this));
                        });
                }
                $('#notification')
                    .append($('<div class="content"></div>').html(notification))
                    .hide()
                    .appendTo('#notification')
                    .fadeIn(1000);
            }

            function closeNotification(notif) {
                var $popup = notif.parents('.popup-notification');
                $popup
                    .animate({
                        border: 'none',
                        height: 0,
                        marginBottom: 0,
                        marginTop: '-6px',
                        opacity: 0,
                        paddingBottom: 0,
                        paddingTop: 0,
                        queue: false
                    }, 2000, function () {
                    var $container = $(this);
                    $container.removeAttr('style');
                    $container.empty();
                    });
                clearTimeout(timerId);
            }
        });
    </script>
    
    <script id="notificationTemplate" type="text/x-jQuery-tmpl">
        <div class="notification-header">
            <div class="notificationalert-user-photo"><img src="${UserPhoto}" /></div>
            <div class="notification-user-time">
                <a href="UserProfile/Index/${UserId}">${UserFirstName} ${UserLastName}</a>
                <span>${DateTime}</span>
            </div>
        </div>
        <div class="notificationBody">
            <div class="notificationMessage">
                <a href="UserProfile/Index/${UserId}">${UserFirstName} ${UserLastName}</a> ${Message} <a href="Share/Playlist/${RecentlyPlaylistId}">${RecentlyPlaylistName}</a>
            </div>
        </div>
    </script>
</body>
</html>
