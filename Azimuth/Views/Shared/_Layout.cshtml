@using Azimuth.Infrastructure.Concrete
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("UserProfile", "Index", "UserProfile", new { AzimuthIdentity.Current.UserCredential.Id }, null)</li>
                        <li>@Html.ActionLink("My music", "Index", "Music")</li>
                    
                        <li>@Html.ActionLink("Public Playlists", "Index", "PublicPlaylists")</li>
                    </ul>
                    
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a id="user-settings" href="@Url.Action("Index", "Settings")">
                                <img src="@AzimuthIdentity.Current.UserCredential.PhotoBig" />
                            </a>
                        </li>
                        <li id="user-name-item">
                            <div id="user-name">@User.Identity.GetUserName()</div>
                            @Html.ActionLink("Log off", "LogOff", "Account", null, new {id = "log-off-link"})
                        </li>
                    </ul>
                    
                    <ul class="nav navbar-nav" style="width: 15%; float: right; margin-top: 15px; margin-right: 10px;">
                        <li>
                            <span class="input-group">
                                <span class="input-group-btn">
                                    <button id="searchBtn" class="btn btn-default glyphicon glyphicon-search" type="button" style="height: 22px; width: 20px; border-color: black; background-color: #66757f; margin-top: -2px; padding-top: 2px; padding-left: 2px;" ></button>
                                </span>
                                <input id="searchText" type="text" class="form-control" style="height: 22px; border-color: black; background-color: #66757f; border-left: 0; color: white;" />
                            </span>
                        </li>
                    </ul>
                }
                else
                {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                </ul>
                
                }
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('#searchBtn').click(function() {
            window.location = window.location.protocol + "//" + window.location.host + '/search?searchParam=' + $('#searchText').val();
        });
        $('#searchText').keypress(function(e) {
            if (e.which == 13) {
                window.location = window.location.protocol + "//" + window.location.host + '/search?searchParam=' + $('#searchText').val();
                return false;
            }
        });
    </script>
</body>
</html>
