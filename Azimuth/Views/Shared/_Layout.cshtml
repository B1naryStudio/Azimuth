@using Azimuth.Infrastructure.Concrete
@using Microsoft.AspNet.Identity

@{
    var loggedUser = AzimuthIdentity.Current.UserCredential;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header col-xs-12 col-sm-6 col-lg-8">
                <a class="col-xs-4" href="@Url.Action("Index", "PublicPlaylists")">
                    <img src="~/Images/logo.jpg" height="40" />
                </a>
                @if (Request.IsAuthenticated)
                {
                    <div class="col-xs-5 pull-right">
                        <form role="form" action="/search">
                            <div class="input-group navbar-btn">
                                <input type="text" placeholder="Search" class="form-control" style="min-width: 150px;" name="searchParam" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default">
                                        <div class="glyphicon glyphicon-search"></div>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                }
                <button type="button" class="navbar-toggle collapsed col-xs-1 pull-right" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            @if (Request.IsAuthenticated)
            {
                <div class="navbar-collapse collapse in col-xs-6 col-lg-4">
                    <ul class="nav navbar-nav">
                        <li id="user-settings" class="col-xs-10 pull-right">
                            <a id="user-image" href="@Url.Action("Index", "Music")">
                                <img src="@AzimuthIdentity.Current.UserCredential.PhotoBig"/>
                            </a>
                            <a href="@Url.Action("Index", "Music")">@User.Identity.GetUserName() </a>
                        </li>
                        <li class="dropdown col-xs-2">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-sort-desc"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Account", "Index", "UserProfile")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Log off", "LogOff", "Account")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                </ul>
                
            }
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        
        <div id="notification"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('#searchBtn').click(function() {
            window.location = window.location.protocol + "//" + window.location.host + '/search?searchParam=' + $('#searchText').val();
        });
        $('#searchText').keypress(function(e) {
            if (e.which == 13) {
                window.location = window.location.protocol + "//" + window.location.host + '/search?searchParam=' + $('#searchText').val();
                return false;
            }
        });
    </script>
    
    <script src="~/Scripts/jquery.signalR-2.1.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            // Declare a proxy to reference the hub.
            var notificationsHub = $.connection.notificationsHub;
            var id = @loggedUser.Id
            // Start Hub
            $.connection.hub.start().done(function() {
                notificationsHub.server.connect(id);
            });

            //$('#myButton').click(function() {
            //    notificationsHub.client.send("message");
            //});

            //notificationsHub.client.messageReceived = function(message) {
            //    $('messagesBody').append(message);
            //};

            notificationsHub.client.newNotification = function(notification) {
                console.log(notification);
                var $notif = $('#notificationTemplate');
                var object = $notif.tmpl(notification);
                var timerId = setTimeout(function() {
                    closeNotification($(object));
                }, 8000);

                addNotice(object);
            };

            function addNotice(notice) {
                $('<div class="notice"></div>')
                    .append('<div class="skin"></div>')
                    .append('<a href="#" class="close">&times;</a>')
                    .append($('<div class="content"></div>').html(notice))
                    .hide()
                    .appendTo('#notification')
                    .fadeIn(1000);

                $('#notification')
                .find('.close')
                .on('click', function () {
                    closeNotification($(this));
                });
            }
            function closeNotification(notif) {
                notif
                    .closest('.notice')
                    .animate({
                        border: 'none',
                        height: 0,
                        marginBottom: 0,
                        marginTop: '-6px',
                        opacity: 0,
                        paddingBottom: 0,
                        paddingTop: 0,
                        queue: false
                    }, 2000, function () {
                        $(this).remove();
                    });
            }
        });
    </script>
    
    <script id="notificationTemplate" type="text/x-jQuery-tmpl">
        
        <div class="NotificationHeader"><span>New notification</span></div>
        <div class="notificationBody">
            <div class="notificationMessage">
                @*<a href="@Url.Action("Index", "UserProfile", new {id = "${UserId}"})">${UserFirstName} ${UserLastName}</a> ${Message}
            <a href="@Url.Action("Index", "PublicPlaylists", new { id = "${RecentlyPlaylistId}" })">${RecentlyPlaylistName}</a></div>*@
                <a href="UserProfile/Index/${UserId}">${UserFirstName} ${UserLastName}</a> ${Message}
                <a href="Share/Playlist/${RecentlyPlaylistId}">${RecentlyPlaylistName}</a>
            </div>
        </div>
        
        

        @*<div class="tableRow draggable-item track vk-item">
            <div class="glyphicon glyphicon-play btn btn-default track-play-btn"></div>
            <div class="track-description" data-title="${Artist} ${Name}">
                <div class="track-info"><a href="#" data-toggle="modal" data-target="#infoModal"><span class="track-artist">${Artist}</span> - <span class="track-title">${Name}</span></a></div>
            </div>
            <div class="track-duration">${Duration}</div>
            <div style="display: none" class="track-url">${Url}</div>
            <div style="display: none" class="thirdPartId">${ThirdPartId}</div>
            <div style="display: none" class="ownerId">${OwnerId}</div>
        </div>*@
    </script>
</body>
</html>
